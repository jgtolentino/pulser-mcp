{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "content": {"type": "string"},
          "score": {"type": "number"},
          "agent": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"},
          "metadata": {"type": "object"}
        },
        "required": ["id", "title", "score"]
      }
    },
    "total": {"type": "integer"},
    "query_time_ms": {"type": "number"}
  },
  "required": ["results"]
}