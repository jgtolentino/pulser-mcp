{
  "dashboard": {
    "title": "Pulser MCP Remote Bridge",
    "uid": "pulser-mcp-sse",
    "version": 1,
    "timezone": "browser",
    "panels": [
      {
        "title": "SSE Connection Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"pulser-mcp-bridge\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": 1, "text": "Connected"},
              {"type": "value", "value": 0, "text": "Disconnected"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "title": "Active SSE Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "pulser_mcp_sse_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [{"format": "short", "min": 0}]
      },
      {
        "title": "Health Check Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "pulser_mcp_service_health",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "service": "Service",
                "status": "Status",
                "response_time": "Response Time (ms)"
              }
            }
          }
        ]
      },
      {
        "title": "Request Rate by Endpoint",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(nginx_http_requests_total{server=\"pulser-ai.com\"}[5m])",
            "legendFormat": "{{uri}}",
            "refId": "A"
          }
        ],
        "yaxes": [{"format": "reqps"}]
      },
      {
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(pulser_mcp_errors_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            }
          }
        }
      },
      {
        "title": "Sync Lag",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "pulser_mcp_sync_lag_seconds",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 300,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 180}
              ]
            }
          }
        }
      },
      {
        "title": "SSE Event Stream",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "{job=\"pulser-mcp-bridge\"} |= \"SSE\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      }
    ],
    "refresh": "10s",
    "time": {"from": "now-1h", "to": "now"},
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(pulser_mcp_service_health, service)",
          "current": {"text": "All", "value": "$__all"},
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Loki",
          "enable": true,
          "expr": "{job=\"pulser-mcp-bridge\"} |= \"ALERT\"",
          "tagKeys": "severity",
          "titleFormat": "MCP Alert",
          "textFormat": "{{message}}"
        }
      ]
    }
  }
}