# Scout Analytics Platform Environment Variables

# Application Settings
VITE_APP_NAME="Scout Analytics Platform"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="AI-Powered Philippine FMCG Intelligence Platform"

# API Configuration
VITE_API_BASE_URL="http://localhost:3001"
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_POWER_BI_DASHBOARD=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Analytics & Tracking
VITE_GOOGLE_ANALYTICS_ID=""
VITE_HOTJAR_ID=""

# Third-party Services
VITE_MAPBOX_ACCESS_TOKEN=""
VITE_AZURE_MAPS_KEY=""

# Development Settings
VITE_DEV_MODE=true
VITE_MOCK_DATA=true
VITE_DEBUG=false

# Brand Configuration
VITE_BRAND_PRIMARY_COLOR="#1e3a8a"
VITE_BRAND_SECONDARY_COLOR="#fbbf24"
VITE_BRAND_NAME="TBWA Philippines"

# Security
VITE_ENABLE_AUTH=false
VITE_AUTH_PROVIDER="local"