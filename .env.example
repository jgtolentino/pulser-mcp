# Example Environment Configuration for Pulser MCP
# Copy to .env and update with your values

# JWT Authentication
PULSER_JWT_SECRET=your-secret-jwt-key-change-this-in-production
MCP_ADMIN_USER=admin
MCP_ADMIN_PASS=Postgres_admin

# Database Security
REDIS_PASSWORD=Postgres_26!
NEO4J_AUTH=neo4j/neo4j-password-change-this
NEO4J_PASSWORD=neo4j-password-change-this
NEO4J_USER=neo4j

# Domain Configuration
DOMAIN=pulser-ai.com
EMAIL=your-email@example.com

# Supabase (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Monitoring
GRAFANA_PASSWORD=admin
GRAFANA_API_KEY=your-grafana-api-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Claude/Anthropic (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Resource Limits
MAX_WORKERS=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_HANDLER=loki://loki:3100