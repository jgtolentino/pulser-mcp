{
  "name": "mcp-complete-desktop",
  "productName": "MCP Complete Server",
  "version": "1.0.0",
  "description": "Complete MCP Server - Desktop Application",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.mcp.complete-server",
    "productName": "MCP Complete Server",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "server/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../../src",
        "to": "server/src"
      },
      {
        "from": "../../../scripts",
        "to": "server/scripts"
      },
      {
        "from": "../../../config",
        "to": "server/config"
      },
      {
        "from": "../../../package.json",
        "to": "server/package.json"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MCP Complete Server"
    }
  },
  "dependencies": {
    "electron": "^27.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "ws": "^8.13.0",
    "winston": "^3.10.0",
    "auto-launch": "^5.0.5",
    "electron-store": "^8.1.0",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "engines": {
    "node": ">=18"
  }
}