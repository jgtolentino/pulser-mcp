# MCP Cloud Relay - Environment Configuration

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Database Configuration
DB_TYPE=postgresql
DATABASE_URL=postgresql://username:password@localhost:5432/mcp_cloud
DB_SSL=true
DB_MAX_CONNECTIONS=20
DB_TIMEOUT=30000

# Cache Configuration
CACHE_TYPE=redis
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Security Configuration
API_KEY=your-secure-api-key-here
CORS_ORIGINS=https://claude.ai,https://claude.anthropic.com,*
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000
ENABLE_SLOW_DOWN=true

# MCP Configuration
ENABLE_WEBSOCKET=true
MAX_PAYLOAD_SIZE=10mb
ENABLE_BATCHING=true
BATCH_SIZE=10
MCP_TIMEOUT=30000

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=info
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_CUSTOM_TOOLS=true
ENABLE_TOOL_CACHING=true
ENABLE_REQUEST_LOGGING=true

# Development/Testing
DEV_MODE=false
TEST_MODE=false
MOCK_DATABASE=false
MOCK_CACHE=false

# Cloud Provider Specific
# Vercel
VERCEL_URL=
VERCEL_ENV=

# Render
RENDER_SERVICE_NAME=
RENDER_EXTERNAL_URL=

# Heroku
HEROKU_APP_NAME=
DYNO=

# AWS
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=
GCP_PROJECT_ID=

# Azure
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
